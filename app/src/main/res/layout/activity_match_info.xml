            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/info_enemy_1_icon" />

        <TextView
            android:id="@+id/info_enemy_1_reasons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

